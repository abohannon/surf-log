<!DOCTYPE html>
<html>
  <head>
    <title>SurfLog | <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="h-screen">
    <%= render 'layouts/nav' %>
    <div class="p-6">
      <% if flash[:info].present? %>
        <div class="mb-6 bg-teal-100 border border-teal-400 text-teal-700 px-4 py-3 rounded relative" role="alert">
          <p class="text-sm">
            <%= flash[:info] %>
          </p>
        </div>
      <% end %>
      <% if flash[:success].present? %>
        <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
          <p class="text-sm">
            <%= flash[:success] %>
          </p>
        </div>
      <% end %>
      <% if flash[:danger].present? %>
        <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <p class="text-sm">
            <%= flash[:danger] %>
          </p>
        </div>
      <% end %>
      <% if flash[:warning].present? %>
        <div class="mb-6 bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative" role="alert">
          <p class="text-sm">
            <%= flash[:warning] %>
          </p>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
